  "license": "MIT",
  "access": "public",
  "private": false,
  "description": "TypeScript utilities to build type-safe queries and fetchers for the Ghost API based on Zod schemas.",
  "repository": {
    "type": "git",
    "url": "https://github.com/PhilDL/ts-ghost/apps/ghost-blog-buster"
  },
  "version": "0.0.7",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
