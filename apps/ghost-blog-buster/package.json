{
  "name": "@ts-ghost/ghost-blog-buster",
  "author": "Philippe L'ATTENTION <https://github.com/PhilDL>",
  "license": "MIT",
  "access": "public",
  "private": false,
  "type": "module",
  "description": "Elegant interactive CLI to export your Ghost Blog Content to a static website, format in Markdown, JSON...",
  "repository": {
    "type": "git",
    "url": "https://github.com/PhilDL/ts-ghost/tree/main/apps/ghost-blog-buster"
  },
  "version": "0.6.11",
  "main": "./dist/cli.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/cli.js"
  },
  "bin": {
    "ghost-blog-buster": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "jiti ./src/cli.ts",
    "dev": "tsup --watch",
    "build": "tsup ./src/cli.ts --format esm --dts",
    "clean": "rimraf .turbo node_modules dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test-ci": "vitest run --coverage.enabled --coverage.reporter='text-summary'",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint ./src --fix",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@ts-ghost/admin-api": "*",
    "@ts-ghost/content-api": "*",
    "@ts-ghost/tsconfig": "*",
    "@types/configstore": "^6.0.0",
    "@types/js-yaml": "^4.0.6",
    "@types/node": "^20.6.2",
    "@types/yargs": "^17.0.24",
    "eslint": "^8.49.0",
    "jiti": "^1.20.0",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "5.2.2",
    "vite": "^4.4.9",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.4"
  },
  "dependencies": {
    "@clack/core": "^0.3.3",
    "@clack/prompts": "^0.7.0",
    "@ts-ghost/admin-api": "^3.0.8",
    "@ts-ghost/content-api": "^4.0.7",
    "configstore": "^6.0.0",
    "js-yaml": "^4.1.0",
    "node-html-markdown": "^1.3.0",
    "picocolors": "^1.0.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
